@model EmployeeLeaveManagement_G1.Models.LeaveRequest
@{
    ViewData["Title"] = "Create Leave Request";
}

<h2>Create Leave Request</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="EmployeeID" class="control-label">Select Employee</label>
        <select asp-for="EmployeeID" class="form-control" asp-items="@(new SelectList(ViewBag.Employees, "EmployeeID", "Name"))"></select>
        <span asp-validation-for="EmployeeID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate" class="control-label">Start Date</label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="control-label">End Date</label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reason" class="control-label">Reason for Leave</label>
        <textarea asp-for="Reason" class="form-control"></textarea>
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
